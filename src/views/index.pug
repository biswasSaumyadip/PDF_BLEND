block styles
  style.
    .home-content {
      padding: 40px;
      max-width: 1200px;
      margin: 0 auto;
    }

    .hero-section {
      text-align: center;
      margin-bottom: 60px;
      padding: 40px 20px;
      background: linear-gradient(135deg, var(--sidebar-bg) 0%, var(--active) 100%);
      border-radius: 20px;
      box-shadow: var(--shadow);
    }

    .hero-title {
      font-size: 3rem;
      color: var(--primary);
      margin-bottom: 20px;
      font-weight: 700;
    }

    .hero-tagline {
      font-size: 1.5rem;
      color: var(--light-text);
      margin-bottom: 30px;
    }

    .emoji {
      font-size: 3.5rem;
      vertical-align: middle;
    }

    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 30px;
      margin-bottom: 40px;
    }

    .feature-card {
      background: var(--sidebar-bg);
      padding: 30px;
      border-radius: 15px;
      box-shadow: var(--shadow);
      text-align: center;
      transition: transform 0.3s ease;
    }

    .feature-card:hover {
      transform: translateY(-5px);
    }

    .feature-icon {
      font-size: 2.5rem;
      color: var(--primary);
      margin-bottom: 20px;
    }

    .feature-card h3 {
      font-size: 1.5rem;
      color: var(--text);
      margin-bottom: 15px;
    }

    .feature-card p {
      color: var(--light-text);
      margin-bottom: 20px;
    }

    .feature-button {
      display: inline-block;
      padding: 10px 20px;
      background-color: var(--primary);
      color: white;
      text-decoration: none;
      border-radius: var(--radius);
      transition: background-color 0.3s ease;
    }

    .feature-button:hover {
      background-color: #3451d1;
    }

    .info-section {
      margin-top: 40px;
    }

    .info-card {
      background: var(--sidebar-bg);
      padding: 30px;
      border-radius: 15px;
      box-shadow: var(--shadow);
      display: flex;
      align-items: flex-start;
      gap: 20px;
    }

    .info-icon {
      font-size: 2rem;
      color: var(--primary);
    }

    .info-content {
      flex: 1;
    }

    .info-content h4 {
      font-size: 1.2rem;
      color: var(--text);
      margin-bottom: 15px;
    }

    .feature-list {
      list-style: none;
      padding: 0;
    }

    .feature-list li {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 10px;
      color: var(--light-text);
    }

    .feature-list i {
      color: #2ecc71;
    }

    @media (max-width: 768px) {
      .home-content {
        padding: 20px;
      }

      .hero-title {
        font-size: 2.5rem;
      }

      .hero-tagline {
        font-size: 1.2rem;
      }

      .features-grid {
        grid-template-columns: 1fr;
      }

      .info-card {
        flex-direction: column;
        text-align: center;
      }
    }
