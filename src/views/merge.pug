extends layout

block sidebarForm
  .sidebar-content
    h3.sidebar-title Merge PDFs
    form.sidebar-form#uploadForm(action='/pdf/merge' method='POST' enctype='multipart/form-data')
      +file-uploader({
        id: 'fileInput',
        accept: '.pdf,.zip',
        multiple: true,
        description: 'Drop your PDF files here'
      })

      .form-group
        label.form-label(for='filename') Output File Name:
        input.form-input#filename(type='text' name='filename' placeholder='MergedFile.pdf')

      button.btn.btn-primary.btn-block(type='submit')
        i.fas.fa-object-group
        span Merge PDFs

block pageContent
  .content-card
    .card-header
      i.fas.fa-info-circle
      h2 Ready to merge your PDFs
    p.card-description Your merged document will be downloaded automatically after processing is complete.

    .preview-container
      .preview-placeholder
        i.far.fa-file-pdf.preview-icon
        p.preview-text Ready to merge your PDFs

block styles
  style.
    /* Global Styles */
    :root {
      --primary: #4361ee;
      --sidebar-bg: #ffffff;
      --content-bg: #f0f5fa;
      --text: #333;
      --light-text: #666;
      --border: #e0e0e0;
      --hover: #f5f5f5;
      --active: #e6f0ff;
      --shadow: 0 2px 10px rgba(0,0,0,0.05);
      --radius: 8px;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      color: var(--text);
      background: var(--content-bg);
      line-height: 1.5;
    }

    .form-group {
      margin-bottom: 1rem;
    }

    .form-label {
      display: flex;
      align-items: center;
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
      color: var(--light-text);
    }

    .form-label i {
      margin-right: 0.5rem;
      color: var(--primary);
    }

    .form-input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid var(--border);
      border-radius: var(--radius);
      font-size: 0.9rem;
    }

    .form-input:focus {
      outline: none;
      border-color: var(--primary);
    }

    .btn {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      padding: 0.75rem;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: var(--radius);
      font-weight: 500;
      cursor: pointer;
      font-size: 0.9rem;
      transition: all 0.2s ease;
    }

    .btn:hover {
      opacity: 0.9;
    }

    .btn i {
      margin-right: 0.5rem;
    }

    /* Content Styles */
    .content {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
    }

    .content-card {
      background: var(--sidebar-bg);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 2rem;
      max-width: 800px;
      margin: 2rem auto;
    }

    .card-header {
      display: flex;
      align-items: center;
      margin-bottom: 1rem;
    }

    .card-header i {
      font-size: 1.5rem;
      color: var(--primary);
      margin-right: 0.75rem;
    }

    .card-header h2 {
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--text);
    }

    .card-description {
      color: var(--light-text);
      margin-bottom: 2rem;
    }

    .preview-container {
      border: 1px solid var(--border);
      border-radius: var(--radius);
      background: var(--hover);
      min-height: 300px;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .preview-placeholder {
      text-align: center;
      color: var(--light-text);
    }

    .preview-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      color: var(--primary);
      opacity: 0.5;
    }

block scripts
