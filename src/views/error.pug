extends layout

block sidebarForm
  //- Optional: leave empty or show a reset button
  p(style='color: #888;') No sidebar content on error page.

block pageContent
  h1 Error Occurred
  if error && error.status
    h2 Status: #{error.status}
  if message
    p= message
  else
    p Something went wrong. Please try again.

block styles
  style.
    main.content {
      padding: 40px;
    }
