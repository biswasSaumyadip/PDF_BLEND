extends layout

block sidebarForm
  form#uploadForm(action='/pdf/merge-with-preview' method='POST' enctype='multipart/form-data')
    label(for='fileInput') Upload PDF(s) or ZIP:
    input(type='file' id='fileInput' name='files' accept='.pdf,.zip' multiple)

    label(for='filename') Output File Name:
    input(type='text' id='filename' name='filename' placeholder='MergedFile.pdf')

    button(type='submit') Merge With Preview

  #loader(style='display:none;') Loading... Please wait...

block pageContent
  h2 Select Pages to Remove
  #previewContainer

block styles
  style.
    html, body {
      margin: 0;
      padding: 0;
      height: 100vh;
      font-family: sans-serif;
      background: #f0f0f0;
    }

    .workspace {
      display: flex;
      height: 100vh;
      width: 100vw;
    }

    main.preview-panel {
      flex: 1;
      padding: 30px;
      overflow-y: auto;
    }

    #previewContainer {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
    }

    .pdf-page {
      background: white;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      text-align: center;
    }

    .pdf-page.selected {
      border: 2px solid red;
      opacity: 0.6;
    }

    #loader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background: rgba(255, 255, 255, 0.8);
      z-index: 999;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: bold;
    }

block scripts
  script(src='https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.11.174/pdf.min.js')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js')
  script(src='https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js')
  script(type='module' src='/javascripts/preview.mjs')
