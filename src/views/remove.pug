block styles
  style.
    html, body {
      margin: 0;
      padding: 0;
      height: 100vh;
      width: 100vw;
      font-family: system-ui, sans-serif;
      background: #f0f0f0;
      overflow: hidden;
    }

    .workspace {
      display: flex;
      flex-direction: row;
      height: 100%;
      width: 100%;
    }

    main.preview-panel {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    #previewContainer {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
      gap: 20px;
      padding: 20px;
    }

    .pdf-page {
      background: white;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      text-align: center;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
      width: 220px;
    }

    .pdf-page.selected {
      border: 2px solid red;
      opacity: 0.6;
    }

    aside.sidebar input,
    aside.sidebar button {
      font-size: 14px;
      padding: 8px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    aside.sidebar button {
      background-color: #007bff;
      color: white;
      font-weight: bold;
      cursor: pointer;
      border: none;
    }

